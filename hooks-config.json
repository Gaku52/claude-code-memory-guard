{
  "_comment": "Choose the section matching your OS. Copy the hooks block into ~/.claude/settings.json",

  "hooks_macos": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/memory-guard.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  },

  "hooks_windows": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"$HOME/.claude/memory-guard.ps1\"",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
