# claude-code-memory-guard configuration
# Shared across macOS and Windows
# Copy to ~/.claude/memory-guard-config.env to customize

# Enable/disable memory guard (true/false)
MEMORY_GUARD_ENABLED=true

# Warning threshold in MB (default: 4GB)
WARNING_THRESHOLD_MB=4096

# Critical threshold in MB (default: 8GB)
CRITICAL_THRESHOLD_MB=8192

# Check interval: run actual check every N tool calls (default: 5)
# Higher values reduce overhead but check less frequently
CHECK_INTERVAL=5

# Maximum log file size in bytes before rotation (default: 1MB)
MAX_LOG_SIZE=1048576

# System free memory warning threshold (percent, default: 20%)
SYSTEM_FREE_WARN_PCT=20

# System free memory critical threshold (percent, default: 10%)
SYSTEM_FREE_CRIT_PCT=10
