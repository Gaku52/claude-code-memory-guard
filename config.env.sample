# Claude Code Memory Guard Configuration

# Enable/disable memory monitoring
MEMORY_GUARD_ENABLED=true

# Memory thresholds (MB)
WARNING_THRESHOLD_MB=4096    # Warning level (default: 4GB)
CRITICAL_THRESHOLD_MB=8192   # Critical level (default: 8GB)

# Check interval (check every N tool uses)
CHECK_INTERVAL=5

# Maximum log file size (bytes)
MAX_LOG_SIZE=1048576

# System free memory thresholds (percentage)
SYSTEM_FREE_WARN_PCT=20
SYSTEM_FREE_CRIT_PCT=10
